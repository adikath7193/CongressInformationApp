<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leg_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aditya.testapp3.LegDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/legparty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37dp"
            android:stretchColumns="*"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/tableLayout3">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:id="@+id/textView3"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_height="wrap_content"
                    android:id="@+id/legname"
                    android:layout_width="0dp"
                    android:textSize="18dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:id="@+id/textView4"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/legemail"
                    android:textSize="18dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chamber:"
                    android:id="@+id/textView5"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/legchamber"
                    android:textSize="18dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact:"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:textSize="18dp"/>

            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/legcontact"
                android:textSize="18dp"
                />
        </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start Term:"
                    android:id="@+id/textView7"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/legstart"
                    android:textSize="18dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End Term:"
                    android:id="@+id/textView8"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/legend"
                    android:textSize="18dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Term:"
                    android:id="@+id/textView9"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    >
                    <ProgressBar
                        style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="45"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/legterm"
                        android:scaleY="4">
                    </ProgressBar>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Term"
                        android:layout_gravity="center"
                        android:id="@+id/legtermvalue" />

                </FrameLayout>




            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Office:"
                    android:id="@+id/textView10"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/legoffice"
                    android:textSize="18dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State:"
                    android:id="@+id/textView11"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/legstate"
                    android:textSize="18dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fax:"
                    android:id="@+id/textView12"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/legfax"
                    android:textSize="18dp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday:"
                    android:id="@+id/textView14"
                    android:textStyle="bold"
                    android:textSize="18dp"/>

                <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/legbirthday"
                    android:textSize="18dp"/>
            </TableRow>

        </TableLayout>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="92dp"
            app:srcCompat="?attr/actionBarItemBackground"
            android:layout_marginTop="14dp"
            android:id="@+id/legimage"
            android:layout_below="@+id/legstar"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@android:drawable/menuitem_background"
            android:layout_alignTop="@+id/legparty"
            android:layout_toLeftOf="@+id/legparty"
            android:layout_toStartOf="@+id/legparty"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/legpartyimage" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/legparty"
            android:layout_marginTop="14dp"
            android:textSize="20dp"
            android:layout_below="@+id/legimage"
            android:layout_alignRight="@+id/legfb"
            android:layout_alignEnd="@+id/legfb" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/f"
            android:id="@+id/legfb"
            android:layout_above="@+id/legimage"
            android:layout_toRightOf="@+id/legimage"
            android:layout_toEndOf="@+id/legimage" />

        <CheckBox
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/legstar"
            android:button="@null"
            android:background="@drawable/favourite"
            android:onClick="favoriteleg"
            android:layout_marginTop="21dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/t"
            android:id="@+id/legt"
            android:layout_alignTop="@+id/legfb"
            android:layout_toRightOf="@+id/legfb"
            android:layout_toEndOf="@+id/legfb"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/w"
            android:id="@+id/legw"
            android:layout_alignTop="@+id/legt"
            android:layout_alignRight="@+id/tableLayout3"
            android:layout_alignEnd="@+id/tableLayout3"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />

    </RelativeLayout>

    </ScrollView>
</FrameLayout>