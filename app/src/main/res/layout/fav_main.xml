<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/favtabs"
            android:layout_toLeftOf="@+id/side_index"
            android:layout_toStartOf="@+id/side_index">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favlegs"
                android:text="Legislator" />
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favbills"
                android:text="Bills" />
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favcomms"
                android:text="Committees" />
        </android.support.design.widget.TabLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/favtabs"
            android:id="@+id/fv"
            android:layout_toStartOf="@+id/side_indexf"
            android:layout_toLeftOf="@+id/side_indexf" />

        <LinearLayout
            android:id="@+id/side_indexf"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="#c3c3c3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:layout_below="@+id/favtabs">
        </LinearLayout>



    </RelativeLayout>
</FrameLayout>