<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/leg_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="0dp"
    tools:context="com.example.aditya.testapp3.LegislatorFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="0dp">

        <android.support.design.widget.TabLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:id="@+id/legtabs"
            >

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bs"
                android:text="By State" />
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/house"
                android:text="House" />
            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/senate"
                android:text="Senate" />
        </android.support.design.widget.TabLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/legtabs"
            android:id="@+id/lv"
            android:layout_toLeftOf="@+id/side_index"
            android:layout_toStartOf="@+id/side_index"
            android:scrollbars="none"/>

        <LinearLayout
            android:id="@+id/side_index"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="#c3c3c3"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="0dp"
            android:layout_below="@+id/legtabs">
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>
