<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:id="@+id/billid"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:textStyle="bold"/>

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billshortitle"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/billid"
        android:layout_alignLeft="@+id/billid"
        android:layout_alignStart="@+id/billid" />

    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:background="@drawable/ic_chevron_right"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/billid"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billdate"
        android:layout_below="@+id/billshortitle"
        android:layout_alignLeft="@+id/billshortitle"
        android:layout_alignStart="@+id/billshortitle"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"/>
</RelativeLayout>